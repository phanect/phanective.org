@require "../node_modules/sanitize.css/sanitize.css"

*
  margin: 0
  padding: 0

h1.myname
  margin-bottom: 10px

.center-inline
  text-align: center

.center
  display: block
  margin: auto

.avatar
  width: 15%
  border-radius: 10%
  margin: 10px auto

.cvlink
  margin-top: 8px

//
// Account icons
//
icon-size = 32px
icon-margin = 2px
icon-num = 6

ul.accounts
  box-sizing: content-box
  list-style: none
  margin: 0 auto
  margin-top: 15px
  width: ((icon-size + icon-margin) * (icon-num + 1))

ul.accounts li
  display: inline-block
  width: icon-size
  height: icon-size
  padding-left: (icon-margin / 2)
  padding-right: (icon-margin / 2)

ul.accounts img
  width: icon-size
  height: icon-size

ul.accounts .circular
    border-radius: 50%
